@inherits LayoutComponentBase

<div class="app-layout">
    <aside class="sidebar">
        <div class="sidebar-header">
            <h3>BlazorECharts</h3>
            <span class="sidebar-subtitle">Samples</span>
        </div>
        <NavMenu />
    </aside>

    <main class="main-content">
        <div class="content-wrapper">
            @Body
        </div>
    </main>
</div>

<style>
    .app-layout {
        display: flex;
        min-height: 100vh;
    }

    .sidebar {
        width: 260px;
        min-width: 260px;
        background-color: #2c3e50;
        color: #ecf0f1;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
    }

    .sidebar-header {
        padding: 1.2rem 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        text-align: center;
    }

    .sidebar-header h3 {
        margin: 0;
        font-size: 1.3rem;
        font-weight: 600;
    }

    .sidebar-subtitle {
        font-size: 0.8rem;
        opacity: 0.7;
    }

    .main-content {
        flex: 1;
        background-color: #f5f7fa;
        overflow-y: auto;
    }

    .content-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }
</style>
